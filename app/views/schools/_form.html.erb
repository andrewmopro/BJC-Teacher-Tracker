
<div class="form-group">
  <%= f.label :name, "School Name", class: "label-required" %>
  <%= f.select :name, 
    options_for_select(School.all.collect {|school| ["#{school.name}, #{school.city}, #{school.state}", school.name] }), 
    {:prompt => 'Search School'},
    {class: "select", id: "school_selectize", onchange: 'autofillSchoolFields();'} %>
  <%= javascript_pack_tag 'schools' %>
  <%= stylesheet_pack_tag 'schools', media: 'all', 'data-turbolinks-track': 'true' %>
  <%= csrf_meta_tags %>
</div>

<div id ="school_form"> 
  <div class = "col-12 d-flex justify-content-end" id ="innest_form">
    <button type="button" class="btn-close" aria-label="Close" id = "close_button">X</button>
  </div>

  <div class='form-group row'>
      <div class='col-6'>
          <%= f.label :name, "School Name", class: "label-required" %>
          <%= f.text_field :name, placeholder: 'UC Berkeley', class: 'form-control',
          required: true, id: 'school_name' %>
      </div>

      <div class='col-4'>
          <%= f.label :city, class: "label-required" %>
          <%= f.text_field :city, placeholder: 'Berkeley', class: 'form-control',
          required: true, id: 'school_city' %>
      </div>

      <div class='col-2'>
          <%= f.label :state, class: "label-required" %>
          <%= f.select(
              :state,
              School::VALID_STATES,
              {include_blank: "State"},
              { class: 'form-control', required: true, id: 'school_state'}
          ) %>
      </div>
  </div>

  <div class="form-group">
    <%= f.label :website, "School Website", class: "label-required" %>
    <%= f.text_field :website, placeholder: "snap.berkeley.edu",
        class: "form-control", required: true, pattern: ".+\\..+", title: "Please enter a valid URL.",
        id: 'school_website' %>
  </div>

  <div class="form-group">
    <%= f.label :grade_level, "Grade Level" %>
    <%= f.select(
        :grade_level,
        options_for_select(School.grade_level_options),
        { include_blank: "Select an option" },
        { class: 'form-control', required: false }
      ) %>
  </div>

  <div class="form-group">
    <%= f.label :school_type, "School Type" %>
    <%= f.select(
        :school_type,
        options_for_select(School.school_type_options),
        { include_blank: "Select an option" },
        { class: 'form-control', required: false }
      ) %>
  </div>


  <% if logged_in? ? current_user.admin : false %>
    <%= f.label :tags, "Tags" %>
    <div class="form-group row">
      <div class='col-2'>
        <%= f.text_field :tags, placeholder: "Tag Name", multiple: true,
            class: "form-control" %>
      </div>
      <div class='col-2'>
        <%= f.text_field :tags, placeholder: "Tag Name", multiple: true,
            class: "form-control" %>
      </div>
      <div class='col-2'>
        <%= f.text_field :tags, placeholder: "Tag Name", multiple: true,
            class: "form-control" %>
      </div>
      <div class='col-2'>
        <%= f.text_field :tags, placeholder: "Tag Name", multiple: true,
            class: "form-control" %>
      </div>
      <div class='col-2'>
        <%= f.text_field :tags, placeholder: "Tag Name", multiple: true,
            class: "form-control" %>
      </div>
      <div class='col-2'>
        <%= f.text_field :tags, placeholder: "Tag Name", multiple: true,
            class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :nces_id, "NCES ID" %>
      <%= f.number_field :nces_id, placeholder: "000000000000",
          class: "form-control", max: 999999999999, title: "Please enter a valid NCES ID." %>
    </div>
  <% end %>
</div>


<script>
  $('#school_name').prop('required',false);
  $('#school_city').prop('required',false);
  $('#school_state').prop('required',false);
  $('#school_website').prop('required',false);
  $('#school_form').hide();

  function autofillSchoolFields() {
    var school_name = $("#school_selectize").val();
    $("#school_name").prop('value', school_name);
  }
</script>
