<div  class='form-group row' >
  <div class='col-12'>
    <%= fields.label :name, "School Name", class: "label-required" %>
    <%= fields.select :name,options_for_select(School.all.collect {|school| ["#{school.name}, #{school.city}, #{school.state}", school.name] }), {:prompt => 'Search School'},
     {class: "select"}%>
  <%= javascript_pack_tag 'schools' %>
  <%= stylesheet_pack_tag 'schools', media: 'all', 'data-turbolinks-track': 'true' %>
  <%= csrf_meta_tags %>
</div>
<div class="modal fade school-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
        <h4 class="modal-title" id="mySmallModalLabel">Add School</h4>
      </div>
      <div class="modal-body">
        <%= form_with model: School.new,method: :create do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
          <%= fields.label :city, class: "label-required" %>
       <%= fields.text_field :city, placeholder: 'Berkeley', class: 'form-control',
       required: true %>
       </div>
       <div class="form-group">
        <%= fields.label :state, class: "label-required" %>
        <%= fields.select(:state,
            School::VALID_STATES,
            {include_blank: "State"},
            { class: 'form-control', required: true }
        )%>
    </div>
    <div class="form-group">
      <%= fields.label :website, "School Website", class: "label-required" %>
      <%= fields.text_field :website, placeholder: "snap.berkeley.edu",
    class: "form-control", required: true, pattern: ".+\\..+", title: "Please enter a valid URL." %>
    </div>
        <div class="form-group">
            <%= f.submit class: "btn btn-primary" %>
          </div>
          <%end%>
          </div>
        </div>
  </div>
</div>
</div>
