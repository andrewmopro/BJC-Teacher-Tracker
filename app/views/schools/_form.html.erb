<div class='form-group row'>
    <div class='col-6'>
        <%= fields.label :name, "School Name", class: "label-required" %>
        <%= fields.text_field :name, placeholder: 'UC Berkeley', class: 'form-control',
        required: true %>
    </div>

    <div class='col-4'>
        <%= fields.label :city, class: "label-required" %>
        <%= fields.text_field :city, placeholder: 'Berkeley', class: 'form-control',
        required: true %>
    </div>

    <div class='col-2'>
        <%= fields.label :state, class: "label-required" %>
        <%= fields.select(
            :state,
            School::VALID_STATES,
            {include_blank: "State"},
            { class: 'form-control', required: true }
        ) %>
    </div>
</div>

<div class="form-group">
<%= fields.label :website, "School Website", class: "label-required" %>
<%= fields.text_field :website, placeholder: "snap.berkeley.edu",
    class: "form-control", required: true, pattern: ".+\\..+", title: "Please enter a valid URL." %>
</div>